@page "/admin/bill-details/{billId:int}"
@inject HttpClient Http
@inject NavigationManager NavigationManager
@layout AdminLayout
@using WebAsemly_NoiThat.Model

@if (bill != null)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Hóa Đơn ID: @bill.ID</h5>
            <p class="card-text">ID Người Dùng: @bill.IDNguoiDung</p>
            <p class="card-text">Tổng Tiền: @bill.TongTien</p>
            <p class="card-text">Ngày Đặt Hàng: @bill.NgayDatHang</p>
            <p class="card-text">Trạng Thái: @bill.TrangThai</p>
        </div>
    </div>

    <h4>Chi Tiết Hóa Đơn</h4>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">ID Sản Phẩm</th>
                <th class="text-center">Tên Sản Phẩm</th>
                <th class="text-center">Số Lượng</th>
                <th class="text-center">Giá</th>
                <th class="text-center">Tổng Giá</th>
            </tr>
        </thead>
        <tbody>
            @if (billDetails != null && billDetails.Count > 0)
            {
                @foreach (var detail in billDetails)
                {
                    <tr>
                        <td class="text-center">@detail.ID</td>
                        <td class="text-center">@detail.IDSanPham</td>
                        <td class="text-center">@detail.Product?.TenSP</td> <!-- Hiển thị tên sản phẩm -->
                        <td class="text-center">@detail.SoLuong</td>
                        <td class="text-center">@detail.Product?.Gia</td> <!-- Hiển thị giá sản phẩm -->
                        <td class="text-center">@((detail.Product?.Gia ?? 0) * detail.SoLuong)</td> <!-- Tính tổng giá -->
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Không có chi tiết hóa đơn nào.</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Đang tải dữ liệu...</p>
}

@code {
    [Parameter]
    public int BillId { get; set; }

    private Bill bill;
    private List<BillDetail> billDetails = new List<BillDetail>();

    protected override async Task OnInitializedAsync()
    {
        await LoadBillDetails();
        await LoadBill();
    }

    private async Task LoadBillDetails()
    {
        try
        {
            billDetails = await Http.GetFromJsonAsync<List<BillDetail>>($"https://localhost:44320/api/HoaDon/by-bill/{BillId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Lỗi khi tải chi tiết hóa đơn: {ex.Message}");
        }
    }

    private async Task LoadBill()
    {
        try
        {
            bill = await Http.GetFromJsonAsync<Bill>($"https://localhost:44320/api/HoaDon/{BillId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Lỗi khi tải hóa đơn: {ex.Message}");
        }
    }
}
