@page "/DonHang"
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@using WebAsemly_NoiThat.Model

<h3>Danh sách hóa đơn</h3>

@if (bills == null)
{
    <p>Loading...</p>
}
else if (!bills.Any())
{
    <p>Không có hóa đơn nào.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Thanh Toán</th>
                <th>Vận Chuyển</th>
                <th>Tổng Tiền</th>
                <th>Ngày Đặt Hàng</th>
                <th>Trạng Thái</th>
                <th>Chi Tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bill in bills)
            {
                <tr>
                    <td>@bill.ID</td>
                    <td>@bill.IDThanhToan</td>
                    <td>@bill.IDVanChuyen</td>
                    <td>@bill.TongTien</td>
                    <td>@bill.NgayDatHang</td>
                    <td>@bill.TrangThai</td>
                    <td>
                        <button @onclick="() => ToggleDetails(bill.ID)">Xem Chi Tiết</button>
                       @*  @if (selectedBillId == bill.ID)
                        {
                            <div class="bill-details">
                                <h5>Chi Tiết Sản Phẩm</h5>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>ID Sản Phẩm</th>
                                            <th>Tên Sản Phẩm</th>
                                            <th>Giá</th>
                                            <th>Số Lượng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detail in bill.BillDetail)
                                        {
                                            <tr>
                                                <td>@detail.Product.ID</td>
                                                <td>@detail.Product.TenSP</td>
                                                <td>@detail.Product.Gia</td>
                                                <td>@detail.SoLuong</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        } *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Bill> bills;
    private int? selectedBillId;

    protected override async Task OnInitializedAsync()
    {
        var userId = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "userId");

        if (int.TryParse(userId, out var id))
        {
            bills = await Http.GetFromJsonAsync<List<Bill>>($"https://localhost:44320/api/HoaDon/user/{id}");
        }
        else
        {
            // Xử lý lỗi khi userId không hợp lệ
            bills = new List<Bill>();
        }
    }

    private void ToggleDetails(int billId)
    {
        selectedBillId = selectedBillId == billId ? (int?)null : billId;
    }
}
