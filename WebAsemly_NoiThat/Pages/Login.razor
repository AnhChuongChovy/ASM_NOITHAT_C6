@page "/DangNhap"
@using System.Net.Http
@using System.Net.Http.Json
@using Microsoft.JSInterop
@using WebAsemly_NoiThat.Model
@inject HttpClient Http
@inject NavigationManager Navigation


<h3>Đăng nhập</h3>

<EditForm Model="loginRequest" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div>
        <label>Email:</label>
        <InputText @bind-Value="loginRequest.Email" />
    </div>
    <div>
        <label>Mật khẩu:</label>
        <InputText @bind-Value="loginRequest.MatKhau" type="password" />
    </div>
    <button type="submit">Đăng nhập</button>
</EditForm>

@code {
    @code {
        private LoginRequest loginRequest = new LoginRequest();

        private async Task HandleLogin()
        {
            try
            {
                var response = await Http.PostAsJsonAsync("https://localhost:44320/api/Login/login", loginRequest);
                if (response.IsSuccessStatusCode)
                {
                    var result = await response.Content.ReadFromJsonAsync<LoginResponse>();
                    if (result.Role == "1")
                    {
                        Navigation.NavigateTo("/admin");
                    }
                    else if (result.Role == "2")
                    {
                        Navigation.NavigateTo($"/TaiKhoan/{result.UserId}");
                    }
                }
                else
                {
                    Console.WriteLine("Đăng nhập không thành công: " + response.ReasonPhrase);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("Lỗi trong quá trình đăng nhập: " + ex.Message);
            }
        }

        private class LoginResponse
        {
            public string Role { get; set; }
            public int UserId { get; set; }
        }

    }

}

