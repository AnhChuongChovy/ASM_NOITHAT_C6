@page "/DangNhap"
@using System.Net.Http
@using System.Net.Http.Json
@using Microsoft.JSInterop
@using WebAsemly_NoiThat.Model
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="d-flex justify-content-center">
    <div class="col-md-6 mt-3" style="width:100%">
        <h3 class="font-weight-bold text-center">ĐĂNG NHẬP</h3>

        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />
@*             <ValidationSummary />
 *@
            <div class="mt-4">
                <label for="email" class="form-label">EMAIL:</label>
                <InputText type="email" id="email" @bind-Value="loginModel.Email" class="form-control input-dangnhap" />
                <ValidationMessage For="@(() => loginModel.Email)" />
            </div>
            <div class="mt-4">
                <label for="password" class="form-label">MẬT KHẨU:</label>
                <InputText type="password" id="password" @bind-Value="loginModel.Password" class="form-control input-dangnhap" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="text-danger mt-2" role="alert">
                    @errorMessage
                </div>
            }
            <div class="mt-4">
                <button class="btn btn-outline-secondary" style="width:150px; height:50px; border-radius:10px;" type="submit">ĐĂNG NHẬP</button>
            </div>
        </EditForm>
        
    </div>
</div>

@code {
    @code {
        private LoginRequest loginRequest = new LoginRequest();

        private async Task HandleLogin()
        {
            try
            {
                var response = await Http.PostAsJsonAsync("https://localhost:44320/api/Login/login", loginRequest);
                if (response.IsSuccessStatusCode)
                {
                    var result = await response.Content.ReadFromJsonAsync<LoginResponse>();
                    if (result.Role == "1")
                    {
                        Navigation.NavigateTo("/admin");
                    }
                    else if (result.Role == "2")
                    {
                        Navigation.NavigateTo($"/TaiKhoan/{result.UserId}");
                    }
                }
                else
                {
                    Console.WriteLine("Đăng nhập không thành công: " + response.ReasonPhrase);
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine("Lỗi trong quá trình đăng nhập: " + ex.Message);
            }
        }

        private class LoginResponse
        {
            public string Role { get; set; }
            public int UserId { get; set; }
        }

    }

}

